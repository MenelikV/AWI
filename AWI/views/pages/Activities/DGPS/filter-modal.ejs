<div class="modal fade" id="filterModalCenter" tabindex="-1" role="dialog" aria-labelledby="filterModalCenterTitle">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <form action="/createFilter/DGPS" method="POST">
        <div class="modal-header" style="background-color:#eef7fc">
          <h4 class="modal-title text-center" style="margin: 0 auto;" id="filterModalCenterTitle"> Filter Criteria <i
              style="color:rgb(148, 196, 224);" class="fa fa-filter fa-sm" title="filter"></i></h4>
        </div>
