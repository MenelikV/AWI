<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <form action="/Activities/DGPS/search" method="POST">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Search Criteria</h5>
      </div>
      <div class="modal-body" style="background-color:white;">
        <div class="row text-left">
          <div class="col md-3">
            <p>Aircraft</p>
            <input type="text" name="aircraft" id="modal_aircraft" readonly value="">
          </div>
          <div class="col md-3">
            <p>Parameter</p>
            <input type="text" name="parameter" id="modal_param" readonly value="">
          </div>
          <div class="col md-3">
            <p>Type</p>
            <input type="text" name="type" id="modal_type" readonly value="">
          </div>
          <div class="col md-3">
            <p>Entries</p>
            <input type="number" min=1 name="entries" value="1" oninput="validity.valid||(value='');" id="modal_entries">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-secondary" data-dismiss="modal" id="#closeButton">Close</button>
        <button type="" id="save" class="btn btn-primary">Search &raquo;</button>
      </div>
    </div>
  </form>
  </div>
</div>
